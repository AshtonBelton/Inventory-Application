<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= item ? 'Edit' : 'Create' %> Item</title>
</head>
<body>
    <h1><%= item ? 'Edit' : 'Create' %> Item</h1>
    <form action="<%= item ? '/items/' + item.id + '?_method=PUT' : '/items' %>" method="POST">
        <label for="name">Name:</label>
        <input type="text" name="name" id="name" value="<%= item ? item.name : '' %>" required>
        <br>
        <label for="description">Description:</label>
        <textarea name="description" id="description" required><%= item ? item.description : '' %></textarea>
        <br>
        <label for="price">Price:</label>
        <input type="number" name="price" id="price" value="<%= item ? item.price : '' %>" required>
        <br>
        <label for="quantity">Quantity:</label>
        <input type="number" name="quantity" id="quantity" value="<%= item ? item.quantity : '' %>" required>
        <br>
        <label for="category">Category:</label>
        <select name="category_id" id="category" required>
            <% categories.forEach(category => { %>
                <option value="<%= category.id %>" <%= item && item.category_id === category.id ? 'selected' : '' %>>
                    <%= category.name %>
                </option>
            <% }) %>
        </select>
        <br>
        <button type="submit"><%= item ? 'Update' : 'Create' %></button>
    </form>
    <a href="/items">Back to Items</a>
</body>
</html>
